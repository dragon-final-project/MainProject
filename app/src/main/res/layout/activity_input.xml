<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_input_word"
    tools:context=".InputActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="135dp"
        android:layout_marginLeft="136dp"
        android:layout_marginRight="135dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="75dp"
        android:text="煮什麼"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCameraInput"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:background="@drawable/bowl_yellow"
        android:text="從相機"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="470dp" />

    <Button
        android:id="@+id/btnTextInput"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginEnd="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="132dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="74dp"
        android:background="@mipmap/bowl_yellow"
        android:text="從文字"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <Button
        android:id="@+id/btnAlbumInput"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:background="@mipmap/bowl_blue"
        android:text="從相簿"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="460dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginEnd="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="132dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="78dp"
        android:background="@mipmap/bowl_blue"
        android:text="從食材"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTextInput" />

</android.support.constraint.ConstraintLayout>